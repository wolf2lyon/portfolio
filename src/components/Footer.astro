---
import Button from "./Button.astro";

const sitemap = [
  {
    label: "Home",
    href: "#home",
  },
  {
    label: "About",
    href: "#about",
  },
  {
    label: "Work",
    href: "#work",
  },
  {
    label: "Reviews",
    href: "#reviews",
  },
  {
    label: "Contact me",
    href: "#contact",
  },
];

const socials = [
  {
    label: "GitHub",
    href: "https://github.com/wolf2lyon",
  },
  {
    label: "Whatssap",
    href: "https://wa.me/51955422889",
  },
  {
    label: "Instagram",
    href: "https://www.instagram.com/codewithsadee",
