const works = [
  {
    imgSrc: project1,
    title: 'TailUp',
    tags: ['HTML', 'CSS', 'Wordpress'],
    projectLink: 'https://wolf2lyon.github.io/tailup/'
  },
  {
    imgSrc: project2,
    title: 'PetFusion',
    tags: ['Wordpress', 'Elementor'],
    projectLink: 'https://wolf2lyon.github.io/petfusion/'
  },
  {
    imgSrc: project3,
    title: 'Fur Friends',
    tags: ['HTML', 'CSS','JS'],
