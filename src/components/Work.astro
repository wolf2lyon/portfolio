---
<section id="work" class="section">
    <div class="container">
        <h2 class="headline-2 mb-8 reveal-up">
            Mis proyectos
        </h2>
        <div class="grid gap-x-4 gap-y-5 grid-cols-[repeat(auto-fill,_minmax(280px,_1fr))]">
            {works.map(({imgSrc,title,tags,projectLink}) => <ProjectCard imgSrc={imgSrc} title={title} tags={tags} projectLink={projectLink} classes=" reveal-up"/> )}
        </div>
    </div>
</section>
