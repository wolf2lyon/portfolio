---
import Button from "./Button.astro";
import ButtonOutline from "./ButtonOutline.astro";
import Code from "../assets/code.svg";
import person from "../assets/image-person.png";
import { Image } from "astro:assets";
---

<section id="home" class="pt-28 lg:pt-36">
  <div class="container lg:grid lg:grid-cols-2 items-center lg:gap-10">
    <div>
      <div class="flex items-center gap-3">
        <figure class="img-box w-9 h-9 rounded-lg">
          <Code width={40} height={40} class="img-cover" />
        </figure>
        <div
          class="flex items-center gap-1.5 text-zinc-400 text-sm tracking-wide"
        >
          <span class="relative w-2 h-2 rounded-full bg-emerald-400">
            <span
              class="absolute inset-0 rounded-full bg-emerald-400 animate-ping"
            ></span>
          </span>
          Disponible para trabajar
        </div>
      </div>
      <div>
        <h2 class="headline-1">Construyendo sitios web para tus necesidades</h2>
        <div class="flex items-center gap-3 mt-5">
          <Button
            href="/Brochure.pdf"
            donwload="download"
            label="Brochure"
            icon="download"
            classes=""
          />
          <ButtonOutline
            href="#about"
            label="Scroll down"
            icon="arrow_downward"
            classes=""
          />
        </div>
      </div>
    </div>
    <div class="hidden lg:block">
      <figure
        class="w-full max-w-[480px] ml-auto bg-gradient-to-t from-sky-400 via-25% via-sky-400/40 to-65% rounded-[60px] overflow-hidden hero-figure flotar"
      >
        <Image
          src={person}
          alt={"person"}
          width={656}
          height={800}
          class={"w-full"}
          loading="eager"
        />
      </figure>
    </div>
  </div>
</section>
