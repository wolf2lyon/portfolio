---
interface Props {
  imgSrc: string;
  title: string;
  projectLink: string;
  tags: string[];
  classes?: string;
}
const { imgSrc, title, projectLink, tags, classes } = Astro.props;
---

<div class={"relative p-4 rounded-2xl bg-zinc-800 hover:bg-zinc-700/50 active:bg-zinc-700/60 ring-1 ring-inset ring-zinc-50/5 transition-colors" + classes}>
  <figure class="img-box aspect-square rounded-lg mb-4">
    <img src={imgSrc} alt={title} loading="lazy" class="img-cover" />
  </figure>
  <div class="flex items-center justify-between gap-4">
    <div>
      <h3 class="title-1 mb-3">
        {title}
      </h3>
      <div class="flex flex-wrap items-center gap-2">
        {tags.map((label) => <span class="h-8 text-sm text-zinc-400 bg-zinc-50/5 grid items-center px-3 rounded-lg">{label}</span>)}
      </div>
    </div>
    <div class="w-11 h-11 rounded-lg grid place-items-center bg-sky-400 text-zinc-950 shrink-0 ">
        <span class="material-symbols-outlined" aria-hidden = "true">
            arrow_outward
        </span>
    </div>
    <a href={projectLink} target="_blank" class="absolute inset-0"></a>
  </div>
</div>
